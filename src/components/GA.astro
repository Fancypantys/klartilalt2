---
/**
 * GA4 minimal snippet for Astro.
 * Reads PUBLIC_GA_ID from .env (e.g., G-CCYZGD8V2M).
 */
const GA_ID = import.meta.env.PUBLIC_GA_ID as string | undefined;
---

{GA_ID && (
  <>
    <!-- Loader -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>

    <!-- Init -->
    <script is:inline define:vars={{ GA_ID }}>
      (function () {
        // GA bootstrap (same as Google's snippet)
        // @ts-ignore - TS doesn't know about dataLayer until we declare it (see global.d.ts below)
        window.dataLayer = window.dataLayer || [];
        // @ts-ignore
        function gtag(){ window.dataLayer.push(arguments); }
        // @ts-ignore
        window.gtag = gtag;

        gtag('js', new Date());
        gtag('config', GA_ID);
      })();
    </script>
  </>
)}
